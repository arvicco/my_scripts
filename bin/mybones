#!C:/Dev/ruby/bin/ruby.exe
p ARGV                                                                    
case ARGV.size 
  when 1 then
    project = ARGV[0]
    system "bones create --github \"FIXME: Description for #{project}\" -s basic #{project}"
  when 2 then
    project = ARGV[0]
    descr = ARGV[1]	
    system "bones create --github \"#{descr}\" -s basic #{project}"
  else
    puts "Usage: #{ARGV[0]} project_name \"description\""
    exit 1
end